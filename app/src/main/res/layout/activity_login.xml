<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login"
    android:orientation="vertical"
    android:weightSum="1280">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="254"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="260"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"></View>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="320"
            android:background="@drawable/login_logo"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="200"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="145.4"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"></View>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="520"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/login_input">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="48"></View>

            <EditText
                android:id="@+id/login_input"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="384"
                android:textSize="13sp"
                android:maxLines="1"
                android:inputType="text"
                android:maxLength="8"
                android:textColor="#909090"
                android:background="@null"
                android:hint="기기번호를 입력해주세요"
            />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="88"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageButton
                    android:visibility="invisible"
                    android:id="@+id/login_input_init_btn"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:background="@drawable/login_input_init_btn"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="19.6"></View>

    <LinearLayout
        android:id="@+id/login_err"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="116"></View>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="290"
            android:background="@drawable/login_err"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="314"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"></View>

    <LinearLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="108"></View>

        <ImageButton
            android:id="@+id/login_auto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="170"
            android:background="@drawable/login_auto_off"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="442"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="58"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="114"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="100"></View>

        <ImageButton
            android:id="@+id/login_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="542"
            android:background="@drawable/login_btn"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="78"></View>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="258"></View>
</LinearLayout>