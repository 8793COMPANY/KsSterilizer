<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/box"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:background="@drawable/add_machine_box"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="128">

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="36"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="38"
            android:weightSum="626">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="58"/>

            <TextView
                android:id="@+id/machine_id"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="170"
                android:textColor="#161616"
                android:text="GEGGGEA64"
                android:textSize="15sp"
                android:gravity="center|start"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="290"/>

            <ImageButton
                android:id="@+id/machine_check"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="38"
                android:layout_gravity="center"
                android:background="@drawable/setting_check_on" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="70"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="54"/>

    </LinearLayout>
</LinearLayout>