<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainControl"
    android:orientation="vertical"
    android:background="#f8f8f8"
    android:weightSum="1280">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90"
        android:background="@drawable/mc_top_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="34"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="114"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="484"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="86"
            android:weightSum="114"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="84"
                android:weightSum="86"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/mc_bt_btn"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="84"
                    android:background="@drawable/mc_bt_btn"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="24"
                android:background="@drawable/mc_bt_string"/>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="84"
            android:weightSum="114"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/mc_setting_btn"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="84"
                android:background="@drawable/mc_setting_btn"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:weightSum="82"
                android:layout_weight="24"
                android:gravity="center">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="64"
                    android:background="@drawable/mc_setting_string"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="82"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="330"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="206"/>

        <ImageButton
            android:id="@+id/mc_power_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="330"
            android:background="@drawable/mc_power_off"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="184"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="28"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="245"/>

        <ImageButton
            android:id="@+id/mc_power_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="230"
            android:background="@drawable/mc_power_on_2"/>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="245"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="94"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="294"
        android:orientation="horizontal"
        android:weightSum="720">

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="82"/>

        <ImageButton
            android:id="@+id/mc_led_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="278"
            android:background="@drawable/mc_led_mode_off"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24"/>

        <ImageButton
            android:id="@+id/mc_uv_mode"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="278"
            android:background="@drawable/mc_uv_mode_off"
            />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="58"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="106"></View>
</LinearLayout>